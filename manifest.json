{
  "manifest_version": 2,
  "name": "Cookie Share",
  "version": "0.1.4",
  "description": "Sends and receives cookies with your friends",
  "permissions": [
    "cookies",
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "cookie-share@firefox.addon",
      "strict_min_version": "57.0"
    }
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
